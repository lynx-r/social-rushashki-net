<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:c="urn:import:net.rushashki.social.shashki64.client.component.ui">
    <ui:style>
        .shashki-column {
            float: left;
        }

        .notation-column {
            float: left;
            /*margin-left: 10px;*/
        }

        .private-chat {
            float: left;
            margin-left: 20px;
        }

        .player-list {
            float: left;
            margin-left: 20px;
            max-width: 200px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:HTMLPanel ui:field="shashkiColumn" addStyleNames="{style.shashki-column}">
            <g:HTMLPanel ui:field="shashki"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="notationColumn" addStyleNames="{style.notation-column}">
            <ui:msg description="Ход" key="turn"><b>Ход:</b></ui:msg>
            <g:HTML ui:field="turnLabel" text="Игра не началась">
                <ui:attribute name="text"/>
            </g:HTML>
            <ui:msg description="Сбито шашек" key="beatDraughts"><b>Сбито шашек:</b></ui:msg>
            <g:Label ui:field="beatenMineDraughtsLabel"/>
            <g:Label ui:field="beatenOpponentDraughtsLabel"/>
            <b:Button ui:field="moveBack" text="Ход назад" addStyleNames="btn btn-default btn-block">
                <ui:attribute name="text"/>
            </b:Button>
            <ui:msg description="Нотация" key="notationList"><b>Нотация:</b></ui:msg>
            <g:HTMLPanel ui:field="notationList"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="privateChatColumn" addStyleNames="{style.private-chat}">
            <ui:msg description="Приватный чат" key="privateChat"><b>Персональный чат:</b></ui:msg>
            <c:ChatPrivateComponentUi ui:field="privateChat"/>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="playerListColumn" addStyleNames="{style.player-list}">
            <span>
                <b:Button ui:field="connectToPlayButton" icon="REFRESH" addStyleNames="btn btn-default btn-primary btn-block">
                    <ui:msg description="Подключиться" key="connectToPlayButton">Подключиться</ui:msg>
                </b:Button>
                <b:Button ui:field="drawButton" addStyleNames="btn btn-default btn-block btn-sm" visible="false">
                    <ui:msg description="Предложить ничью" key="drawButton">Предложить ничью</ui:msg>
                </b:Button>
                <b:Button ui:field="surrenderButton" addStyleNames="btn btn-default btn-block btn-sm" visible="false">
                    <ui:msg description="Сдаться" key="surrenderButton">Сдаться</ui:msg>
                </b:Button>
            </span>
            <ui:msg description="Список игроков" key="playerListLabel"><b>Список игроков:</b></ui:msg>
            <g:ScrollPanel ui:field="playerPanel"/>
            <b:InputGroup>
                <b:InputGroupAddon icon="SEARCH"/>
                <b:TextBox placeholder="Поиск игроков" autoComplete="true"/>
            </b:InputGroup>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>