<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
    <g:HTMLPanel>
        <h1><ui:msg description="Settings" key="lkSettings">Настройки</ui:msg></h1>
        <b:Panel>
            <b:PanelHeader>
                <b:Heading size="H3" text="Персональные">
                    <ui:attribute name="text" description="PrivateSettings"/>
                </b:Heading>
            </b:PanelHeader>
            <b:PanelBody>
                <g:HTMLPanel>
                    <b:TextBox ui:field="playerNameTextBox"/>
                    <b:Button ui:field="submitPlayerNameButton" text="Сохранить"/>
                </g:HTMLPanel>
            </b:PanelBody>
        </b:Panel>
    </g:HTMLPanel>
</ui:UiBinder>