<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
    <g:HTMLPanel>
        <h1>
            <ui:msg description="Settings" key="lkSettings">Настройки</ui:msg>
        </h1>
        <b:Row>
            <b:Column size="MD_6">
                <b:Panel>
                    <b:PanelHeader>
                        <b:Heading size="H3" text="Персональные">
                            <ui:attribute name="text" description="PrivateSettings"/>
                        </b:Heading>
                    </b:PanelHeader>
                    <b:PanelBody>
                        <g:HTMLPanel>
                            <b:Row>
                                <b:Column size="MD_9">
                                    <b:InputGroup>
                                        <b:InputGroupAddon icon="USER">
                                            <ui:msg description="A player name on the site" key="playerNameOnSite">
                                                Имя на сайте
                                            </ui:msg>
                                        </b:InputGroupAddon>
                                        <b:TextBox ui:field="playerNameTextBox" placeholder="Имя на сайте">
                                            <ui:attribute name="placeholder" description="A player name on the site"/>
                                        </b:TextBox>
                                    </b:InputGroup>
                                </b:Column>
                                <b:Column size="MD_3">
                                    <b:Button ui:field="submitPlayerNameButton" text="Сохранить" addStyleNames="btn btn-default btn-block">
                                        <ui:attribute name="text" description="Save"/>
                                    </b:Button>
                                </b:Column>
                            </b:Row>
                        </g:HTMLPanel>
                    </b:PanelBody>
                </b:Panel>
            </b:Column>
        </b:Row>
    </g:HTMLPanel>
</ui:UiBinder>